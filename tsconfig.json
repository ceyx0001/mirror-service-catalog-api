{
    "compilerOptions": {
      "module": "CommonJS",
      "outDir": "api",
      "rootDir": "src",
      "moduleResolution": "node",
      "allowJs": true,
      "target": "es6",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }